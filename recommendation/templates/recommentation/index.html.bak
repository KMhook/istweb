{% extends 'layout.html' %}

{% block body_class %}recommendation{% endblock %}
{% block current_tab %}recommendation{% endblock %}

{% block main_content %}
<h1>成员推荐书籍</h1>
<ul class="books">
   {% for book in reco %}
   <li class="book">
      <div class="book-cover">
          <a href="{{ book.link.1.href }}"><img src="{{ book.link.2.href }}"</img></a>
      </div>

      <div class="book-info">
          <div class="book-name">
              书名: <a href="{{ book.link.1.href }}">{{ book.title.text }}</a>
          </div>
          <div class="book-author">
              作者：
              {% for author in book.author %}
                {{ author.name.text }}<br/>
              {% endfor %}
          </div>
      </div>
   </li>
   {% endfor %}

</ul>

<div class="pagination">
   <span class="step-links">
      {% if reco.has_previous %}
      <a href="?page={{ reco.previous_page_number }}">previous</a>
      {% endif %}
      <span class="current">
         Page {{ reco.number }} of {{ reco.paginator.num_pages }}.
      </span>
      {% if reco.has_next %}
      <a href="?page={{ reco.next_page_number }}">next</a>
      {% endif %}
   </span>
</div>
{% endblock main_content %}
